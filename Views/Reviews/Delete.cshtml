@model CookingRecipes.Models.Review

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<h4 style="text-align:center;">Review</h4>
<hr />

<div class="card">
    <div class="card-body text-center">
        <h5 class="card-title">@Html.DisplayFor(model => model.Recipe.Title)</h5>
        <p class="card-text"> <i>@Html.DisplayFor(model => model.AppUser):</i></p>
        <p class="card-text"> @Html.DisplayFor(model => model.Comment)</p>
        <div class="card-text">
            @if (Model?.Rating == null)
            {
                <p>No Rating.</p>
            }
            else
            {
                <p>Rating: @Html.DisplayFor(model => model.Rating) </p>
            }
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</div>
